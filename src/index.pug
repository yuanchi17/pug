extends layout

block beforehtml
  - const title = "YUAN"

block style
  style
    :sass
      [v-cloak]
        display: none
      $color_blue: #78D0FF
      $color_white: #ffffff
      $font_size_small: 14px

      @mixin size($w, $h)
        width: $w
        height: $h
      @keyframes open
        0%
          +size(20px, 250px)
        10%
          +size(20px, 250px)
        100%
          +size(400px, 250px)

      #app
        height: 100%
        img
          width: 250px
          height: 250px
          object-fit: cover
          border-radius: 50%
        .row
          height: 100%
      
      .contact
        a
          font-size: 28px
          color: rgba(gray, 0.7)
          i:hover
            color: gray

      section#home
        height: calc(100vh - 55px)
        max-height: 570px
        background-color: $color_blue
        h1
          color: $color_white
          &:after
            border-top: solid
            content: " "
            display: block
            left: 110px
            position: absolute
            top: 24px
            width: 80px
          &:before
            border-top: solid
            content: " "
            display: block
            position: absolute
            right: 110px
            top: 24px
            width: 80px
        .contact
          a
            font-size: 28px
            color: rgba(gray, 0.7)
            i:hover
              color: gray
        .more
          font-weight: initial
          color: $color_white
          font-size: 23px
          hr
            transform: rotate(90deg)
            border-top: solid 1px $color_white

      section#home-vcard
        p, span, a
          color: rgba(white, 0.7)
          font-size: $font_size_small
          font-weight: 400
        .name
          color: $color_blue
          font-weight: 400
        .card
          +size(400px, 250px)
          animation: open 2s both
          background-color: #333
          border-radius: 6px
          border: none
          box-shadow: 0px 0px 5px 3px rgba(black, 0.3)
          overflow: hidden
          transition: 1s
          & .tri
            +size(150px, 200px)
            background-color: darken($color_blue, 5)
            position: absolute
            &.tri1
              bottom: 0px
              transform: rotate(-18deg) translate(-85%, -5%)
            &.tri2
              right: 8px
              top: 0px
              transform: rotate(-18deg) translate(85%, 5%)

        .vcard-bottom
          transition: 1s 0.5s
          & .bottom-texts
            .vcard-title
              color: rgba($color_blue, 0.5)
              font-weight: bold
            .vcard-body
              border-top: solid 1px
              line-height: 20px
          a
            bottom: 0px
            right: 0px
            color: rgba($color_blue, 0.5)
            font-size: $font_size_small
            position: absolute
        .vcard-top
          & .top-texts
            h1
              font-size: 50px

      section#home-footer
        h4
          color: rgba(gray, 0.7)
        h4:hover, i:hover
          color: gray

block content
  include /navbar
  #app.content(v-cloak)
    section#home.d-flex.flex-column.align-items-center
      img.mt-5.mb-3.animate__animated.animate__fadeIn.animate__delay-1s(src="https://i.imgur.com/f4j0B1I.jpg", alt="個人照片")
      h1.m-0.text-center.animate__animated.animate__rotateIn YUAN
      .contact.animate__animated.animate__fadeIn.animate__delay-1s
        a.mx-1(href="https://www.youtube.com/channel/UC0Wem7bts97LKT-2mb3c4Kg" target="_blank")
          i.fa.fa-youtube-square
        a.mx-1(href="https://github.com/lyccccc17" target="_blank")
          i.fa.fa-github-square
        a.mx-1(href="mailto:joyceleeya@gmail.com" target="_blank")
          i.fa.fa-envelope-square
      a.more.animate__animated.animate__pulse.animate__infinite.mt-auto(href="#home-vcard" style="text-decoration: none")
        p.pb-3 more
        hr
    section#home-vcard.py-3.d-flex.flex-column.align-items-center
      .card.vcard-top.d-flex.flex-column.justify-content-center
        .top-texts.text-center
          h1.name.m-0 {{ vcard.title }}
          p.pt-2.m-0 Yuan-Chi Lee
          a.pt-2.m-0(href="mailto:joyceleeya@gmail.com" target="_blank") joyceleeya@gmail.com
        .tri.tri1
        .tri.tri2
      div <br>
      .card.vcard-bottom
        .bottom-texts.p-5
          h2.name.m-0.px-1 Yuan-Chi Lee
          p.vcard-title.m-0.p-1.pb-2 {{ vcard.company }} {{ vcard.position }}
          p.vcard-body.m-0.px-1.pt-2 {{ vcard.text }}
        a.mb-2.mr-3(href="./works.html", target="_blank" style="text-decoration: none")
          i.fa.fa-hand-o-right
          span.pl-1 作品集
        .tri.tri1
        .tri.tri2
    section#home-footer.d-flex.align-items-center.justify-content-center
      a(href="#home" style="text-decoration: none")
        h4.m-0.mr-3.text-center YUAN
      .contact
        a.mx-1(href="https://www.youtube.com/channel/UC0Wem7bts97LKT-2mb3c4Kg" target="_blank")
          i.fa.fa-youtube-square
        a.mx-1(href="https://github.com/lyccccc17" target="_blank")
          i.fa.fa-github-square
        a.mx-1(href="mailto:joyceleeya@gmail.com" target="_blank")
          i.fa.fa-envelope-square

block script
  script.
    const vm = new Vue({ // eslint-disable-line no-unused-vars
      el: '#app',
      data: {
        vcard: {
          title: 'L Y C',
          company: '李家愛放屁',
          position: '老么',
          text: '畢業於 逢甲大學應用數學系，學過 Python，因興趣開始自學網頁設計程式，希望能讓更多人看到自己的作品！'
        },
      },
      async mounted () {
        await this.init()
      },
      methods: {
        async getCsv (url) {
          const csv = _.trim(_.get(await axios.get(url), 'data')) // _.trim：把前後多餘的空格修掉
          return _.get(Papa.parse(csv, {
            encoding: 'utf8',
            header: true,
          }), 'data', [])
        },
        async init () {
          try {
            const res = await this.getCsv('https://docs.google.com/spreadsheets/d/e/2PACX-1vRA9QJDFGAuHqHe6hNfjTMLDfYvEbPmOH17743KVG6L1KCV92J9mEmXoLvF8Xu-CAf-HeB1NrM87Sf2/pub?gid=929015231&single=true&output=csv')
            this.vcard = res[0]
          } catch (err) {
            console.log(err)
            throw err
          }
        },
      },
    })

